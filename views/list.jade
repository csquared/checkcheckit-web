div.row
  div.span3
    h2= list.name
  div.span4
    h5=new Date()

form
  dl#list(data-id=list_id, data-checked=JSON.stringify(list.checked))
    each step,i in list.steps
      dt
        label(for=i).checkbox
          input(type='checkbox', id=i)
          = step.name
      - if (step.body != '')
        dd
          pre= step.body

script(type='text/javascript', src='/javascripts/list.js')
